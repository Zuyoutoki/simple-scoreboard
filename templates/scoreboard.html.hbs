<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://unpkg.com/simpledotcss/simple.min.css">
        <title>scoreboard</title>
    </head>
    <body>
        <header>
            <h1>scoreboard</h1>
            <nav>
                <ul>
                    <li><a href="/">submit flag</a></li>
                    <li><a href="/scoreboard" class="current">scoreboard</a></li>
                </ul>
            </nav>
        </header>
        <main>
            <h2>scoreboard</h2>
            <table style="margin-left: auto; margin-right: auto;">
                <thead>
                    <tr>
                        <th>rank</th>
                        <th>username</th>
                        <th>flags</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each scores as |score|}}
                    <tr>
                        <td>{{#plus-one @index}}{{/plus-one}}</td>
                        <td>{{score.user}}</td>
                        <td>
                            <span style="visibility: {{#if (contains 1 score.flags)}}visible{{else}}hidden{{/if}};">1</span>
                            <span style="visibility: {{#if (contains 2 score.flags)}}visible{{else}}hidden{{/if}};">2</span>
                            <span style="visibility: {{#if (contains 3 score.flags)}}visible{{else}}hidden{{/if}};">3</span>
                            <span style="visibility: {{#if (contains 4 score.flags)}}visible{{else}}hidden{{/if}};">4</span>
                            <span style="visibility: {{#if (contains 5 score.flags)}}visible{{else}}hidden{{/if}};">5</span>
                            <span style="visibility: {{#if (contains 6 score.flags)}}visible{{else}}hidden{{/if}};">6</span>
                            <span style="visibility: {{#if (contains 7 score.flags)}}visible{{else}}hidden{{/if}};">7</span>
                            <span style="visibility: {{#if (contains 8 score.flags)}}visible{{else}}hidden{{/if}};">8</span>
                            <span style="visibility: {{#if (contains 9 score.flags)}}visible{{else}}hidden{{/if}};">9</span>
                            <span style="visibility: {{#if (contains 10 score.flags)}}visible{{else}}hidden{{/if}};">10</span>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </main>
    </body>
</html>